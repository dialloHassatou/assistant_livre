<%= form_for(@scene) do |f| %>
  <% if @scene.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@scene.errors.count, "error") %> prohibited this scene from being saved:</h2>

      <ul>
      <% @scene.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :recit %><br>
    <%= f.text_area :recit %>
  </div>
  <div class="field">
    <%= f.label :lieu %><br>
    <%= f.text_field :lieu %>
  </div>
  <div class="field">
    <%= f.label :debut %><br>
    <%= f.date_select :debut %>
  </div>
  <div class="field">
    <%= f.label :fin %><br>
    <%= f.date_select :fin %>
  </div>
  <div class="field">
 <% Chapitre.all.each do |chapitre| %>
 <LABEL><%= chapitre.numero %>
   <%= check_box_tag "scene[chapitre_ids][]", chapitre.id %> 
 </label>
 <% end %>
 </div>

 <div class="field">
 <% Personne.all.each do |personne| %>
 <label><%= personne.name %>
   <%= check_box_tag "scene[personne_ids][]"%> 
 </label>
 <% end %>
</div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
