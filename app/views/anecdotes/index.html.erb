<h1>Liste des Anecdotes </h1>

<table>
  <thead>
    <tr>
      <th>Texte</th>
      <th>Sujet</th>
      <th>Theme</th>
      <th>Chapitre</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @anecdotes.each do |anecdote| %>
      <tr>
        <td><%= anecdote.texte %></td>
        <td><%= anecdote.sujet %></td>
        <td><%= anecdote.theme %></td>
        <td><%=link_to anecdote.chapitre_id %></td>
        <td><%= link_to 'Show', anecdote %></td>
        <td><%= link_to 'Edit', edit_anecdote_path(anecdote) %></td>
        <td><%= link_to 'Destroy', anecdote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Anecdote', new_anecdote_path %>
